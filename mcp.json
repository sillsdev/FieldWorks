{
  "version": 1,
  "mcpServers": {
    "github": {
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "./scripts/mcp/start-github-server.ps1",
        "-RepoSlug",
        "sillsdev/FieldWorks"
      ],
      "env": {
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "serena": {
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "./scripts/mcp/start-serena-server.ps1",
        "-ProjectPath",
        "./.serena/project.yml"
      ],
      "env": {
        "SERENA_API_KEY": "${env:SERENA_API_KEY:-}"
      }
    }
  }
}