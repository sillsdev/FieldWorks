<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <AssemblyName>Filters</AssemblyName>
    <RootNamespace>SIL.FieldWorks.Filters</RootNamespace>
    <OutputType>Library</OutputType>
    <LangVersion>latest</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <WarningsNotAsErrors>168;169;219;414;649;1635;1702;1701</WarningsNotAsErrors>
    <!-- Disable deterministic builds to allow version wildcards in CommonAssemblyInfo.cs -->
    <Deterministic>false</Deterministic>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86' Or '$(Configuration)|$(Platform)'=='Debug|x64' Or '$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\..\Output\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86' Or '$(Configuration)|$(Platform)'=='Release|x64' Or '$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\..\Output\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include CommonAssemblyInfo that is generated during build -->
    <Compile Include="..\..\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" Condition="Exists('..\..\CommonAssemblyInfo.cs')" />
    <!-- Exclude test files -->
    <Compile Remove="FiltersTests/**" />
  </ItemGroup>

  <!-- References to assemblies restored by packages.config -->
  <ItemGroup>
    <Reference Include="CommonServiceLocator">
      <HintPath>..\..\..\packages\CommonServiceLocator.2.0.7\lib\net47\CommonServiceLocator.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Icu">
      <HintPath>..\..\..\packages\icu.net.3.0.0\lib\net461\icu.net.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.Core">
      <HintPath>..\..\..\packages\SIL.Core.15.0.0-beta0117\lib\net461\SIL.Core.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.LCModel">
      <HintPath>..\..\..\packages\SIL.LCModel.11.0.0-beta0135\lib\net461\SIL.LCModel.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.LCModel.Core">
      <HintPath>..\..\..\packages\SIL.LCModel.Core.11.0.0-beta0135\lib\net461\SIL.LCModel.Core.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.LCModel.Utils">
      <HintPath>..\..\..\packages\SIL.LCModel.Utils.11.0.0-beta0135\lib\net461\SIL.LCModel.Utils.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.WritingSystems">
      <HintPath>..\..\..\packages\SIL.WritingSystems.15.0.0-beta0117\lib\net461\SIL.WritingSystems.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- References to local assemblies that are not NuGet packages -->
  <ItemGroup>
    <Reference Include="FwUtils">
      <HintPath>..\..\..\Output\Debug\FwUtils.dll</HintPath>
    </Reference>
    <Reference Include="ViewsInterfaces">
      <HintPath>..\..\..\Output\Debug\ViewsInterfaces.dll</HintPath>
    </Reference>
    <Reference Include="xCoreInterfaces">
      <HintPath>..\..\..\Output\Debug\xCoreInterfaces.dll</HintPath>
    </Reference>
    <Reference Include="XMLUtils">
      <HintPath>..\..\..\Output\Debug\XMLUtils.dll</HintPath>
    </Reference>
    <Reference Include="ManagedLgIcuCollator">
      <HintPath>..\..\..\Output\Debug\ManagedLgIcuCollator.dll</HintPath>
    </Reference>
    <Reference Include="netstandard" />
  </ItemGroup>

  <!-- Framework References -->
  <ItemGroup>
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Xml.Linq" />
  </ItemGroup>

  <!-- Resource files - using Update to configure properties since they're auto-included -->
  <ItemGroup>
    <EmbeddedResource Update="FiltersStrings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FiltersStrings.Designer.cs</LastGenOutput>
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>

  <!-- WinForms designer support -->
  <ItemGroup>
    <Compile Update="FiltersStrings.Designer.cs">
      <DependentUpon>FiltersStrings.resx</DependentUpon>
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
    </Compile>
  </ItemGroup>

</Project>
