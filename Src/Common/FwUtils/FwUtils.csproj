<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <AssemblyName>FwUtils</AssemblyName>
    <RootNamespace>SIL.FieldWorks.Common.FwUtils</RootNamespace>
    <OutputType>Library</OutputType>
    <LangVersion>latest</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <WarningsNotAsErrors>168;169;219;414;649;1591;1635;1702;1701</WarningsNotAsErrors>
    <DocumentationFile>$(OutputPath)FwUtils.xml</DocumentationFile>
    <!-- Disable deterministic builds to allow version wildcards in CommonAssemblyInfo.cs -->
    <Deterministic>false</Deterministic>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86' Or '$(Configuration)|$(Platform)'=='Debug|x64' Or '$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\..\Output\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86' Or '$(Configuration)|$(Platform)'=='Release|x64' Or '$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\..\Output\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>true</Optimize>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include CommonAssemblyInfo that is generated during build -->
    <Compile Include="..\..\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" Condition="Exists('..\..\CommonAssemblyInfo.cs')" />
    <!-- Exclude template files and test files -->
    <Compile Remove="FwUtils.template.cs" />
    <Compile Remove="FwUtilsTests/**" />
  </ItemGroup>

  <!-- References to assemblies restored by packages.config -->
  <ItemGroup>
    <Reference Include="CommonServiceLocator">
      <HintPath>..\..\..\packages\CommonServiceLocator.2.0.7\lib\net47\CommonServiceLocator.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="icu.net">
      <HintPath>..\..\..\packages\icu.net.3.0.0\lib\net461\icu.net.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="NAudio">
      <HintPath>..\..\..\packages\NAudio.1.10.0\lib\net35\NAudio.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="NAudio.Lame">
      <HintPath>..\..\..\packages\NAudio.Lame.1.1.5\lib\net20\NAudio.Lame.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.Core">
      <HintPath>..\..\..\packages\SIL.Core.15.0.0-beta0117\lib\net461\SIL.Core.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.Core.Desktop">
      <HintPath>..\..\..\packages\SIL.Core.Desktop.15.0.0-beta0117\lib\net461\SIL.Core.Desktop.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.DesktopAnalytics">
      <HintPath>..\..\..\packages\SIL.DesktopAnalytics.4.0.0\lib\net461\SIL.DesktopAnalytics.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.FLExBridge.IPCFramework">
      <HintPath>..\..\..\packages\SIL.FLExBridge.IPCFramework.1.1.1-beta0001\lib\net461\SIL.FLExBridge.IPCFramework.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.LCModel">
      <HintPath>..\..\..\packages\SIL.LCModel.11.0.0-beta0135\lib\net461\SIL.LCModel.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.LCModel.Core">
      <HintPath>..\..\..\packages\SIL.LCModel.Core.11.0.0-beta0135\lib\net461\SIL.LCModel.Core.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.LCModel.Utils">
      <HintPath>..\..\..\packages\SIL.LCModel.Utils.11.0.0-beta0135\lib\net461\SIL.LCModel.Utils.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.Lexicon">
      <HintPath>..\..\..\packages\SIL.Lexicon.15.0.0-beta0117\lib\net462\SIL.Lexicon.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="SIL.Windows.Forms">
      <HintPath>..\..\..\packages\SIL.Windows.Forms.15.0.0-beta0117\lib\net461\SIL.Windows.Forms.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="System.ValueTuple">
      <HintPath>..\..\..\packages\System.ValueTuple.4.5.0\lib\net47\System.ValueTuple.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- References to local assemblies that are not NuGet packages -->
  <ItemGroup>
    <Reference Include="FwResources">
      <HintPath>..\..\..\Output\Debug\FwResources.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ViewsInterfaces">
      <HintPath>..\..\..\Output\Debug\ViewsInterfaces.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <!-- Framework References -->
  <ItemGroup>
    <Reference Include="System.Configuration" />
    <Reference Include="System.Data" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Management" />
    <Reference Include="System.ServiceModel" />
    <Reference Include="System.Web" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Xml.Linq" />
  </ItemGroup>

  <!-- Resource files - using Update to configure properties since they're auto-included -->
  <ItemGroup>
    <EmbeddedResource Update="FwUpdateChooserDlg.resx">
      <DependentUpon>FwUpdateChooserDlg.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="FwUtilsStrings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FwUtilsStrings.Designer.cs</LastGenOutput>
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>

  <!-- Settings files -->
  <ItemGroup>
    <None Include="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
      <SubType>Designer</SubType>
    </None>
    <None Include="app.config" />
    <None Include="BuildInclude.targets" />
  </ItemGroup>

  <!-- WinForms designer support -->
  <ItemGroup>
    <Compile Update="FwUpdateChooserDlg.Designer.cs">
      <DependentUpon>FwUpdateChooserDlg.cs</DependentUpon>
    </Compile>
    <Compile Update="FwUtilsStrings.Designer.cs">
      <DependentUpon>FwUtilsStrings.resx</DependentUpon>
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
    </Compile>
    <Compile Update="Properties\Settings.Designer.cs">
      <DependentUpon>Settings.settings</DependentUpon>
      <AutoGen>True</AutoGen>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
    </Compile>
  </ItemGroup>

  <Import Project="BuildInclude.targets" />

</Project>