<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <AssemblyName>FwUtils</AssemblyName>
    <RootNamespace>SIL.FieldWorks.Common.FwUtils</RootNamespace>
    <OutputType>Library</OutputType>
    <LangVersion>latest</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <WarningsNotAsErrors>168;169;219;414;649;1591;1635;1702;1701</WarningsNotAsErrors>
    <DocumentationFile>$(OutputPath)FwUtils.xml</DocumentationFile>
    <!-- Disable deterministic builds to allow version wildcards in CommonAssemblyInfo.cs -->
    <Deterministic>false</Deterministic>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86' Or '$(Configuration)|$(Platform)'=='Debug|x64' Or '$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\..\..\Output\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>false</Optimize>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86' Or '$(Configuration)|$(Platform)'=='Release|x64' Or '$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\..\..\Output\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <Optimize>true</Optimize>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include CommonAssemblyInfo that is generated during build -->
    <Compile Include="..\..\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" Condition="Exists('..\..\CommonAssemblyInfo.cs')" />
    <!-- Exclude template files and test files -->
    <Compile Remove="FwUtils.template.cs" />
    <Compile Remove="FwUtilsTests/**" />
  </ItemGroup>

  <!-- PackageReferences matched from nuget-common/packages.config -->
  <ItemGroup>
    <PackageReference Include="CommonServiceLocator" Version="2.0.7">
      <ExcludeAssets>Build,Analyzers</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="icu.net" Version="3.0.0">
      <ExcludeAssets>Build,Analyzers</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="NAudio" Version="1.10.0" />
    <PackageReference Include="NAudio.Lame" Version="1.1.5" />
    <PackageReference Include="SIL.Core" Version="15.0.0-beta0117" />
    <PackageReference Include="SIL.Core.Desktop" Version="15.0.0-beta0117" />
    <PackageReference Include="SIL.DesktopAnalytics" Version="4.0.0" />
    <PackageReference Include="SIL.FLExBridge.IPCFramework" Version="1.1.1-beta0001" />
    <PackageReference Include="SIL.LCModel" Version="11.0.0-beta0135" />
    <PackageReference Include="SIL.LCModel.Core" Version="11.0.0-beta0135" />
    <PackageReference Include="SIL.LCModel.Utils" Version="11.0.0-beta0135" />
    <PackageReference Include="SIL.Lexicon" Version="15.0.0-beta0117" />
    <PackageReference Include="SIL.Windows.Forms" Version="15.0.0-beta0117" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <!-- References to local assemblies that are not NuGet packages -->
  <ItemGroup>
    <Reference Include="FwResources">
      <HintPath>..\..\..\Output\Debug\FwResources.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="ViewsInterfaces">
      <HintPath>..\..\..\Output\Debug\ViewsInterfaces.dll</HintPath>
    </Reference>
    <Reference Include="netstandard" />
  </ItemGroup>

  <!-- Framework References -->
  <ItemGroup>
    <Reference Include="System.Configuration" />
    <Reference Include="System.Data" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Management" />
    <Reference Include="System.ServiceModel" />
    <Reference Include="System.Web" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Xml.Linq" />
  </ItemGroup>

  <!-- Resource files - using Update to configure properties since they're auto-included -->
  <ItemGroup>
    <EmbeddedResource Update="FwUpdateChooserDlg.resx">
      <DependentUpon>FwUpdateChooserDlg.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="FwUtilsStrings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>FwUtilsStrings.Designer.cs</LastGenOutput>
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>

  <!-- Settings files -->
  <ItemGroup>
    <None Include="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
      <SubType>Designer</SubType>
    </None>
    <None Include="app.config" />
    <None Include="BuildInclude.targets" />
  </ItemGroup>

  <!-- WinForms designer support -->
  <ItemGroup>
    <Compile Update="FwUpdateChooserDlg.Designer.cs">
      <DependentUpon>FwUpdateChooserDlg.cs</DependentUpon>
    </Compile>
    <Compile Update="FwUtilsStrings.Designer.cs">
      <DependentUpon>FwUtilsStrings.resx</DependentUpon>
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
    </Compile>
    <Compile Update="Properties\Settings.Designer.cs">
      <DependentUpon>Settings.settings</DependentUpon>
      <AutoGen>True</AutoGen>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
    </Compile>
  </ItemGroup>

  <Import Project="BuildInclude.targets" />

</Project>