<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>FieldWorks</AssemblyName>
    <RootNamespace>SIL.FieldWorks</RootNamespace>
    <TargetFramework>net48</TargetFramework>
    <OutputType>WinExe</OutputType>
