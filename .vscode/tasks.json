{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build recent",
      "type": "shell",
      "command": "Build/build-recent",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Whitespace check (workspace)",
      "type": "shell",
      "command": "git diff --check; git diff --check --cached",
      "options": {
        "shell": {
          "executable": "powershell.exe",
          "args": [
            "-NoProfile",
            "-ExecutionPolicy",
            "Bypass",
            "-Command"
          ]
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Gitlint preview (workspace)",
      "type": "shell",
      "command": "python -m pip install --upgrade gitlint; $up = git rev-parse --abbrev-ref --symbolic-full-name '@{upstream}' 2>$null; if ($LASTEXITCODE -eq 0) { gitlint --ignore body-is-missing --commits $up.. } else { gitlint --ignore body-is-missing --commits HEAD~20..HEAD }",
      "options": {
        "shell": {
          "executable": "powershell.exe",
          "args": [
            "-NoProfile",
            "-ExecutionPolicy",
            "Bypass",
            "-Command"
          ]
        }
      },
      "problemMatcher": []
    },
    {
      "label": "remakefw",
      "type": "shell",
      "command": "cd Build && build.bat /t:remakefw",
      "linux": {
        "command": ". environ && cd Build && ./build /t:remakefw"
      },
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "remakefw + test",
      "type": "shell",
      "command": "cd Build && build.bat /t:remakefw /p:Action=Test",
      "linux": {
        "command": ". environ && cd Build && ./build /t:remakefw /p:Action=Test"
      }
    }
  ]
}