{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build recent",
      "type": "shell",
      "command": "Build/build-recent",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Whitespace check",
      "type": "shell",
      "command": "git fetch origin; git log --check --pretty=format:\"---% h% s\" origin/release/9.3..",
      "problemMatcher": []
    },
    {
      "label": "Gitlint preview",
      "type": "shell",
      "command": "python -m pip install --upgrade gitlint; git fetch origin; gitlint --ignore body-is-missing --commits origin/release/9.3..",
      "problemMatcher": []
    },
    {
      "label": "remakefw",
      "type": "shell",
      "command": "cd Build && build.bat /t:remakefw",
      "linux": {
        "command": ". environ && cd Build && ./build /t:remakefw"
      },
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "remakefw + test",
      "type": "shell",
      "command": "cd Build && build.bat /t:remakefw /p:Action=Test",
      "linux": {
        "command": ". environ && cd Build && ./build /t:remakefw /p:Action=Test"
      }
    }
  ]
}