{
  "chat.promptFilesRecommendations": {
    "speckit.constitution": true,
    "speckit.specify": true,
    "speckit.plan": true,
    "speckit.tasks": true,
    "speckit.implement": true
  },
  "chat.tools.terminal.autoApprove": {
    ".specify/scripts/bash/": true,
    ".specify/scripts/powershell/": true
  },
  "cmake.ignoreCMakeListsMissing": true,
  // Disable .NET test discovery since we use MSBuild + NUnit Console
  "dotnet-test-explorer.testProjectPath": "**/*Tests.csproj",
  "dotnet-test-explorer.pathForResultFile": "${workspaceFolder}/.testresults",
  "dotnet-test-explorer.testArguments": ""
  // Exclude patterns to speed up file watching
  "files.watcherExclude": {
    "**/Output/**": true,
    "**/Obj/**": true,
    "**/packages/**": true,
    "**/Downloads/**": true
  }
}